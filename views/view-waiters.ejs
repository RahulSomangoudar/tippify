<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Waiters</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        header .header-left h1 {
            margin: 0;
        }

        header .header-right {
            margin-left: auto;
        }

        .container {
            display: flex;
            flex: 1;
        }

        aside {
            background-color: #f4f4f4;
            width: 200px;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

        aside nav ul {
            list-style: none;
            padding: 0;
        }

        aside nav ul li {
            margin-bottom: 10px;
        }

        aside nav ul li a {
            text-decoration: none;
            color: #333;
        }

        aside nav ul li a:hover {
            color: #007BFF;
        }

        .content {
            flex: 1;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table th,
        table td {
            padding: 10px;
            text-align: left;
        }

        table th {
            background-color: #f0f0f0;
            color: #333;
            font-weight: normal;
        }

        table td {
            border-bottom: 1px solid #ddd;
        }

        table img {
            max-width: 100px;
            max-height: 100px;
        }

        h2 {
            margin-left: 20px;
        }
    </style>
</head>

<body>
    <%- include('partials/header') %>
    <div class="container">
        <%- include('partials/sidebar') %>
        <div class="content">
            <h2>Waiters</h2>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>UPI ID</th>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% waiters.forEach(waiter => { %>
                    <tr>
                        <td><%= waiter.name %></td>
                        <td><%= waiter.upiId %></td>
                        <td><img src="/uploads/<%= waiter.image %>" alt="<%= waiter.name %>"></td>
                        <td>
                            <button onclick="editWaiter('<%= waiter._id %>')">Edit</button>
                            <button onclick="deleteWaiter('<%= waiter._id %>')">Delete</button>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function editWaiter(waiterId) {
            // Redirect or show modal for editing the waiter with ID waiterId
            window.location.href = '/edit-waiter/' + waiterId;
        }

        function deleteWaiter(waiterId) {
            // Make a request to delete the waiter with ID waiterId
            if (confirm('Are you sure you want to delete this waiter?')) {
                fetch('/delete-waiter/' + waiterId, {
                        method: 'DELETE'
                    })
                    .then(response => {
                        if (response.ok) {
                            window.location.reload(); // Reload the page or update the list dynamically
                        } else {
                            alert('Failed to delete waiter');
                        }
                    })
                    .catch(error => console.error('Error deleting waiter:', error));
            }
        }
    </script>
</body>

</html>
